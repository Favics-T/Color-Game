import React, { useState } from "react";
import { motion } from "framer-motion";

const Color = () => {
  const colors = ["#6E8E59", "#4B164C", "#09122C", "#000957", "#16404D", "#96414d"];
  const [targetColors, setTargetColors] = useState("#000957");
  const [message, setMessage] = useState("Click to play");
  const [score, setScore] = useState(parseInt(localStorage.getItem("score")) || 0);

  const tryColorChange = (color) => {
    if (targetColors === color) {
      setMessage("You Passed! 🎉");
      setScore((prevScore) => prevScore + 1);
    } else {
      setMessage("You Failed ❌");
    }

    // Pick a new random color different from the current one
    let newColor;
    do {
      newColor = colors[Math.floor(Math.random() * colors.length)];
    } while (newColor === targetColors);

    setTargetColors(newColor);
  };

  const newGame = () => {
    const randomIndex = Math.floor(Math.random() * colors.length);
    setMessage("Play A game");
    setTargetColors(colors[randomIndex]);
    setScore(0);
    localStorage.setItem("score", "0");
  };

  return (
    <div className="min-h-screen font-serif flex flex-col items-center text-white px-4 py-6 bg-black">
      <div className="w-full max-w-lg bg-gray-900 rounded-xl p-6">
        <h1 className="text-center text-2xl font-bold mb-4 text-blue-400">Guessing Game</h1>
        <h2 className="text-xl font-semibold mb-4 text-blue-400" data-testid="gameInstructions">
          Guess The Correct Color!
        </h2>

        <motion.div
          className="h-32 w-32 border-2 rounded-lg mx-auto"
          data-testid="colorBox"
          key={targetColors}
          initial={{ opacity: 0, x: -50 }}
          animate={{ opacity: 1, x: 0 }}
          exit={{ opacity: 0, x: 50 }}
          transition={{ duration: 0.5, ease: "easeInOut", type: "spring", stiffness: 120 }}
          style={{ backgroundColor: targetColors }}
        ></motion.div>

        <div className="text-blue-400 my-4 text-center">
          <p className="text-lg">{message}</p>
          <p className="text-lg font-semibold">Score: {score}</p>
        </div>

        {/* Buttons Grid */}
        <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4 justify-center mt-4">
          {colors.map((color) => (
            <button
              key={color}
              className="w-16 h-10 rounded shadow-lg"
              style={{ backgroundColor: color }}
              onClick={() => tryColorChange(color)}
              data-testid="colorOption"
            ></button>
          ))}
        </div>

        <button
          className="bg-blue-500 text-white rounded-lg w-full 
          py-2 mt-6 text-lg font-semibold"
          data-testid="newGameButton"
          onClick={newGame}
        >
          New Game
        </button>
      </div>
    </div>
  );
};

export default Color;
